<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:weightSum="10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_edit_info_target_txt"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:textSize="20sp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:text="@string/dialog_edit_info_target_txt"/>

        <EditText
            android:id="@+id/dialog_edit_info_edit_txt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:hint="@string/dialog_edit_info_hint_txt"/>

        <LinearLayout
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="10"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            >

            <Button
                android:id="@+id/dialog_edit_info_confirm_btn"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:background="@drawable/button_custom_edit_info_dialog"
                android:text="@string/dialog_edit_info_confirm_txt"
                android:textColor="@color/colorPrimary"/>


            <Button
                android:id="@+id/dialof_edit_info_cancel_btn"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:background="@drawable/button_custom_edit_info_dialog"
                android:text="@string/dialog_edit_info_cancel_txt"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>