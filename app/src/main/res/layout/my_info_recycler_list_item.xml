<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">


        <TextView
            android:id="@+id/my_info_subject_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/my_info_subject_txt"/>

        <TextView
            android:id="@+id/my_info_done_number_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/my_info_done_all_number_txt" />

    <ProgressBar
        android:id="@+id/my_info_done_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:progressDrawable="@drawable/progress_bar_custom_my_info"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_below="@id/my_info_subject_name_txt"/>

</RelativeLayout>